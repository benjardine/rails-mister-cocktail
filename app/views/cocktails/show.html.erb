

<div class="container">

  <p>
  <strong>Name:</strong>
  <%= @cocktail.name %>
</p>
<% @cocktail.doses.each do |dose| %>
  <%= dose.description %>
  <%= dose.ingredient.name %>
  <%= link_to 'Delete dose', dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' }  %>
<% end %>
</div>

<div class="container">
<%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail) %>

<%= link_to 'Back', cocktails_path %>
</div>
