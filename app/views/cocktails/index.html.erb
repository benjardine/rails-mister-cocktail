<div class="banner">
  <div class="banner-content">
    <h1>Le Wagon's cocktails</h1>
    <p>Awesome beverages for developers nightlife</p>
    <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>
<div class="container">
  <div>
    <% @cocktails.each do |cocktail| %>
      <div class="col-12 col-md-6 col-lg-3">
        <div class="card">
          <div class="card-product">
            <div class="card-product-infos">
            <h2><%= cocktail.name %></h2>
            </div>
          </div>
          <%= link_to "view", cocktail_path(cocktail), class: 'card-link' %>
        </div>
      </div>
    <% end %>
  </div>
</div>


<div class="card-product">
  <div class="card-product-infos">
    <p>Le Wagon Cocktail Company.</p>
  </div>
</div>

